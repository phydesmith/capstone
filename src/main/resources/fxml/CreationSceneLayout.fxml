<?xml version="1.0" encoding="UTF-8"?>


<!--?import java.net.URL?-->
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Pos?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane 
id="creationPane" 
prefWidth="1080"            
prefHeight="720"
xmlns:fx="https://javafx.com/"
fx:controller="io.javasmithy.controller.scene.CreationSceneController"
stylesheets="@/style/CreationStyle.css"
styleClass="creationPane">
    <top >
        <Button text = "Back" fx:id = "creationBack" onAction="#openMenuScene"/>
    </top>
    <bottom>
        <Button text = "Start Game" fx:id = "toGameBtn" onAction="#openGameScene"/>
    </bottom>
    <center>
        <Pane fx:id = "centerChangePane"  BorderPane.alignment="TOP_RIGHT"/>
    </center>
    <left>
        <VBox
        alignment="CENTER"
        id="creationButtons"
        spacing="20">
            <children>
                <Button text="Abilities" onAction="#showAbilityGeneration"/>
                <Button text="Race"/>
                <Button text="Class"/>
                <Button text="Background"/>
            </children>
        </VBox>
    </left>

</BorderPane>
