<?xml version="1.0" encoding="UTF-8"?>


<!--?import java.net.URL?-->
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Pos?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane 
id="creationPane" 
prefWidth="1080"            
prefHeight="720"
xmlns:fx="https://javafx.com/"
fx:controller="io.javasmithy.controller.scene.CreationSceneController"
stylesheets="@/style/CreationStyle.css"
styleClass="creationPane"
alignment="CENTER_LEFT">

        <Button 
            text = "Back" 
            fx:id = "creationBack" 
            onAction="#openMenuScene"
            GridPane.rowIndex="0"
            GridPane.columnIndex="0"/>

        <Button 
            text = "Start Game" 
            fx:id = "toGameBtn" 
            onAction="#openGameScene"
            GridPane.rowIndex="10"
            GridPane.columnIndex="0"/>


        <Pane 
            fx:id = "centerChangePane"  
            GridPane.rowIndex="2"
            GridPane.columnIndex="2"
            GridPane.columnSpan="5"
            GridPane.rowSpan="8"/>


        <VBox
            alignment="CENTER"
            id="creationButtons"
            spacing="20"
            GridPane.rowIndex="2"
            GridPane.columnIndex="0"
            GridPane.rowSpan="8"
            GridPane.columnSpan="2">
            <children>
                <Button 
                    text="Race"
                    onAction="#showRaceChoice"/>
                <Button 
                    text="Abilities" 
                    onAction="#showAbilityGeneration"/>
                <Button 
                    text="Class"/>
                <Button 
                    text="Background"/>
            </children>
        </VBox>

    </GridPane>
